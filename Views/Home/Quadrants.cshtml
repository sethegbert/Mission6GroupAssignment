                        </div>
                        <div class="col-2 align-self-center redButton">
                            <a class="center">Delete</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <div class="row">
        <div class="col-1 sketchy justify-content-center align-middle" style="margin: 5px;">
            <div style="display: flex; align-items: center; justify-content: center;" class="col">
                <h2 style="writing-mode: tb-rl; transform: rotate(-180deg);">Not Important</h2>
            </div>
        </div>
        <div class="col sketchy" style="margin: 5px;">
            @foreach (var x in Model)
            {
                @if (x.QuadrantNumber == 3)
                {
                    <div class="row">
